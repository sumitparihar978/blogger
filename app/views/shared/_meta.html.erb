<link href="//fonts.googleapis.com/css?family=Open+Sans:300,400,400i,600,600i,700,700i,800" rel="stylesheet">
<link href="//fonts.googleapis.com/css?family=Playfair+Display:400i,700,700i,900,900i" rel="stylesheet">
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<meta name="description" content="<%= content_for?(:description) ? content_for(:description) : "BloggerApp description" %>">
<meta name="theme-color" content="#922d7b" />
<meta name="msapplication-navbutton-color" content="#922d7b">

<!-- iOS Safari -->
<meta name="apple-mobile-web-app-status-bar-style" content="black">
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
<meta property="twitter:creator" content="<%= content_for?(:twitter_creator) ? content_for(:twitter_creator) : "BloggerApp" %>" />


<!-- Google / Search Engine Tags -->
<meta itemprop="name" content="<%= content_for?(:title) ? content_for(:title) : "BloggerApp" %>">
<meta itemprop="description" content="<%= content_for?(:description) ? content_for(:description) : "BloggerApp description" %>">